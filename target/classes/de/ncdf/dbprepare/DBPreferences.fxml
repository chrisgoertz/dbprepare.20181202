<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.ncdf.dbprepare.DBPreferencesController">
   <children>
      <GridPane hgap="10.0" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="tfHost" GridPane.columnIndex="1" />
            <TextField fx:id="tfPort" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="tfUsern" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Hostname" GridPane.halignment="RIGHT" />
            <Label text="Port" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <Label text="Username" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <Label text="Password" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <PasswordField fx:id="tfPass" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      <Button fx:id="btnSave" mnemonicParsing="false" onAction="#savePreferences" text="save" />
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</VBox>
